<div class="container">
  <h1>Latest articles</h1>

  <ul>
    <% @articles.each do |article| %>
      <li><%= link_to article.title, article_path(article), class: 'title' %> <%= article.content %>
          <div class="icons">
            <%= link_to article_path(article),
              method: :delete,
              data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-trash-alt"></i>
              <% end %>
              <%= link_to edit_article_path(article) do %>
              <i class="fas fa-pencil-alt"></i>
              <% end %>
          </div>
      </li>
    <% end %>
  </ul>


  <p><%= link_to "Create an article", new_article_path, class: 'btn-purple' %></p>
</div>
